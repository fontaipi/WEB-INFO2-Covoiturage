{% extends 'base.html.twig' %}

{% block title %}Trajet index{% endblock %}

{% block body %}
    <h1>Trajet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Places</th>
                <th>Datetime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trajet in trajets %}
            <tr>
                <td>{{ trajet.id }}</td>
                <td>{{ trajet.places }}</td>
                <td>{{ trajet.datetime ? trajet.datetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('trajet_show', {'id': trajet.id}) }}">show</a>
                    <a href="{{ path('trajet_edit', {'id': trajet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('trajet_new') }}">Create new</a>
{% endblock %}
